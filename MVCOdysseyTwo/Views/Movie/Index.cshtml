@model IEnumerable<MVCOdysseyTwo.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movie Index</h2>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Year</th>
    </tr>
        @foreach (var movie in Model)
        {
           <tr>
               <td>@movie.Title</td>
               <td>@movie.Year</td>
               <td>@Html.ActionLink("Edit", "Edit", new { id = @movie.MovieID })</td>
               <td>@Html.ActionLink("Delete", "Delete", new { id = @movie.MovieID })</td>
           </tr>
        }
</table>

